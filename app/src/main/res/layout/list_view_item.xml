<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/back_container_view"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:background="#5F6BA5"
        android:clickable="false"
        android:scaleX="1.01"
        android:scaleY="1.05"
        app:layout_constraintBottom_toBottomOf="@+id/container_view"
        app:layout_constraintLeft_toLeftOf="@+id/container_view"
        app:layout_constraintRight_toRightOf="@+id/container_view"
        app:layout_constraintTop_toTopOf="@+id/container_view" />

    <View
        android:id="@+id/container_view"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#FFFFFF"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mapImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/container_view"
        app:layout_constraintStart_toStartOf="@+id/container_view"
        app:layout_constraintTop_toTopOf="@+id/container_view"
        app:srcCompat="@drawable/location" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="#A9ACB7"
        app:layout_constraintBottom_toBottomOf="@+id/container_view"
        app:layout_constraintStart_toEndOf="@+id/mapImage"
        app:layout_constraintTop_toTopOf="@+id/container_view" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="#a9acb7"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/container_view"
        app:layout_constraintEnd_toEndOf="@+id/back_container_view"
        app:layout_constraintTop_toTopOf="@+id/container_view" />
</androidx.constraintlayout.widget.ConstraintLayout>